<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <%- include("./partials/head") %>
</head>


<body>
    <%- include("./partials/nav") %>

        <% -include("./partials/script") %>
        <div class="container">
            <h1 class="mt-3"><%= blog.title %></h1>
            <img class="mt-3" src="<%= blog.coverImage %>" width="740px" alt="Card image cap">
            
            <div class="mt-3">
                <%= blog.body %>
            </div>
        </div>
        
                <div class="container mt-3">
                    <img src="<%=blog.createdBy.profileImage %>" width="50px" alt="profileImage">
                   PublishedBy... <%=blog.createdBy.fullname %>
                </div>
            </div>
            <% if (locals.user) { %>
                <section class="bg-white text-dark py-8 py-lg-16 mt-4">
                    <div class="container max-w-2xl mx-auto px-4">
                        <form class="mb-6" action="/blog/comment/<%=blog._id %>" method="post">
                            <div class="p-2 mb-4 bg-white rounded border border-secondary">
                                <label for="comment" class="visually-hidden">Your comment</label>
                                <textarea id="comment" rows="4" class="form-control border-0 text-dark bg-white"
                                    placeholder="Write a comment..." required name="content"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Post comment
                            </button>
                        </form>
                    </div>
                </section>
                <% } %>
                    <div class="px-4">
                        <h2 class="text-lg lg:text-2xl font-bold text-gray-900 dark:text-white mt-3  px-4">
                            Discussion (<%= comments.length %>)
                        </h2>
                    </div>

                    <% comments.forEach(comment=> { %>
                        <div class="flex justify-between items-center mb-6">

                        </div>
                        <article class="p-4 mb-3 ms-3 ms-lg-5 bg-white rounded shadow-sm text-dark">
                            <footer class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <p class="d-inline-flex align-items-center me-3 text-dark fw-semibold">
                                        <img class="me-2 rounded-circle" width="50"
                                            src="<%=comment.createdBy.profileImage %>"
                                            alt="<%=comment.createdBy.fullname  %>">
                                        <%=comment.createdBy.fullname %>
                                    </p>
                                    <p class="text-muted small">
                                        <h7>
                                            <%=comment.createdBy.createdAt %>
                                        </h7>
                                    </p>
                                </div>

                            </footer>
                            <p class="text-muted">
                                <%=comment.content %>
                            </p>

                        </article>
                        <% }) %>

</body>

</html>